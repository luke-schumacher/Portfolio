    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const pageSwitchers = document.querySelectorAll('.page-switcher');
            const sections = document.querySelectorAll('.page-section');
            const navLinks = document.querySelectorAll('.nav-link');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            const showSection = (hash) => {
                const targetId = hash ? hash.substring(1) : 'home';
                let sectionFound = false;

                sections.forEach(section => {
                    if (section.id === targetId) {
                        section.classList.remove('hidden');
                        sectionFound = true;
                    } else {
                        section.classList.add('hidden');
                    }
                });

                if (!sectionFound) {
                    document.getElementById('home').classList.remove('hidden');
                }

                updateActiveLink(targetId);
                window.scrollTo(0, 0);
                mobileMenu.classList.add('hidden');
            };

            const updateActiveLink = (targetId) => {
                navLinks.forEach(link => {
                    if (link.hash === `#${targetId}`) {
                        link.classList.add('active');
                    } else {
                        link.classList.remove('active');
                    }
                });
            };

            pageSwitchers.forEach(switcher => {
                switcher.addEventListener('click', (e) => {
                    e.preventDefault();
                    const hash = e.currentTarget.hash;
                    history.pushState(null, null, hash);
                    showSection(hash);
                });
            });

            window.addEventListener('popstate', () => {
                showSection(window.location.hash);
            });

            showSection(window.location.hash || '#home');

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });
        });
    </script>

